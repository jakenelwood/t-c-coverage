{
  "build": {
    "command": "bash _build.sh",
    "output_directory": ".next",
    "root_directory": "/"
  },
  "routes": [
    { "pattern": "/api/*", "service": "twincitiescoverage-api" },
    { "pattern": "/*", "static": true }
  ],
  "environment_variables": {
    "NEXT_PUBLIC_API_URL": "https://api.twincitiescoverage.com"
  }
} 